<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtusername"
        android:layout_width="270dp"
        android:layout_height="71dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="88dp" />

    <EditText
        android:id="@+id/txtpassward"
        android:layout_width="270dp"
        android:layout_height="71dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:hint="Passward"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="88dp" />

    <EditText
        android:id="@+id/txtconpassward"
        android:layout_width="270dp"
        android:layout_height="71dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="88dp"
        android:ems="10"
        android:hint="Confirm Passward"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="88dp" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="270dp"
        android:layout_height="71dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/txtregister"
        android:layout_width="210dp"
        android:layout_height="58dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="412dp"

        android:src="@drawable/logopresigstation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="96dp" />

    <ImageButton
        android:id="@+id/txtLOGIN"
        android:layout_width="208dp"
        android:layout_height="71dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"

        android:layout_marginTop="500dp"
        android:src="@drawable/signin_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="58dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        app:srcCompat="@drawable/username1" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="58dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/username1"
        android:layout_marginLeft="32dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="276dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pass1"
        android:layout_marginLeft="32dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="41dp"
        android:layout_height="32dp"
        android:layout_marginTop="344dp"
        android:layout_marginStart="32dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/conpass"
        android:layout_marginLeft="32dp" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_marginTop="148dp"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobile"
        android:layout_marginLeft="35dp" />



</RelativeLayout>
